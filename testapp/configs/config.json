{
  "train": {
    "epochs": 100,
    "batch_size": 8,
    "lr": 0.0001,
    "device": "auto",
    "resume_checkpoint": null
  },
  "model": {
    "base_channels": 32,
    "input_size": 256
  },
  "data": {
    "train_path": "data/train",
    "val_path": "data/val",
    "num_workers": 2
  },
  "log": {
    "save_every_epochs": 5,
    "sample_every_epochs": 1,
    "output_dir": "outputs",
    "checkpoint_dir": "checkpoints"
  },
  "loss_weights": {
    "l1": 1.0,
    "ssim": 0.05,
    "hist": 0.1
  },
  "augmentations": {
    "hflip_prob": 0.5,
    "vflip_prob": 0.5,
    "rotation_degrees": 15,
    "color_jitter_brightness": 0.1,
    "color_jitter_contrast": 0.1
  }
}